@model IEnumerable<PizzaStore.Models.Pizza>

@{
    ViewData["Title"] = "Pizzalarımız";
}

<h3>Pizzalarımız</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <ul class="nav">
  @foreach (var item in ViewBag.Categories)
        {
            <li class="nav-item">
    <a class="nav-link active" aria-current="page" asp-action="Index" asp-route-id="@item.Id">@item.Name</a>
  </li> 
        }
        
  
  
</ul>
</div>
<div class="row">
@foreach (var item in Model) {
            <div class="col-4">
                <div class="card">
                    <img src="~/images/@item.Photo" class="card-img-top" style="height:276px">
                    <div class="card-body">
                    <h3 class="card-title">@item.Category.Name </h3>
                        <h5 class="card-title">@item.Name </h5>
                        <p class="card-text">@item.Description</p>
                        <div class="d-grid gap-2 d-md-block">
                            <a class="btn btn-primary" asp-controller="Pizzas" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                             </div>
                    </div>
                </div>
            </div>
}
</div>

