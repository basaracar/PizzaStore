@model List<CartList>;
@{
    decimal total = 0;
    decimal tutar = 0;
}

@foreach(var item in Model){
    
        tutar = item.Adet * item.Item.Price;

    <div class="card m-2 p-2">
        <div class="row">
            <div class="col-3 col-md-2">
                <img src="~/images/@item.Item.Photo" class="img-thumbnail"  alt="Product 1">
            </div>
            <div class="col-9 col-md-10">
                <h4>@item.Item.Name</h4>
                <p>@item.Item.Price</p>
                <div class="form-group col-3">
                    <label for="product1-quantity">Adet</label>
                    <input type="number" class="form-control" id="product1-quantity" value="@item.Adet" min="1">
                </div>
                <p>Tutar: @tutar</p>
            </div>
        </div>
    </div>


    
    total += tutar;
}

<div class="row mb-3">
    <div class="col">
        <h2> Toplam Tutar: @total</h2>
    </div>
</div>