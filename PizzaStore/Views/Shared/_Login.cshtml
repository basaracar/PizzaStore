@model PizzaStore.Models.ViewModel.LoginViewModel;


@if (ViewBag.Name != null)
{
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">@ViewBag.Name</a>
            <ul class="dropdown-menu">


                <li><a class="nav-link" asp-action="Logout">Çıkış</a></li>
            </ul>
        </li>
    </ul>


}
else
{
<form asp-action="Login" asp-controller="Pizzas">
                    <div class="row g-3">
                        <div class="col">
                            <input type="email" class="form-control" asp-for="Email">
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" asp-for="Password" asp-area="Password">
                        </div>
        <div class="col">
             <button type="submit" class="btn btn-primary">
                              
                            Giriş
                        </button>
        </div>
                    </div>

                </form>
    <!--    <a class="nav-link" asp-action="Login">Giriş</a>-->
}
